<!DOCTYPE html>
<html lang="en">
    <%- include('components/head',{title}); -%>
    <body>
        <%- include('components/navbar',{nav:'add',search:""}); -%> <% if ( status=='ok') {%>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <span>Thêm hoa thành công</span>
            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
        </div>
        <%}%> <% if ( status=='error') {%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <span>Thêm hoa không thành công</span>
            <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
        </div>
        <%}%>
        <div class="container">
            <main>
                <div class="py-5 text-center">
                    <h2>Thêm hoa vào từ điển</h2>
                </div>
                <form class="needs-validation" novalidate method="POST" action="/flower" enctype="multipart/form-data">
                    <div class="row g-5">
                        <div class="col-md-5 col-lg-4 order-md-last">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Hình ảnh</span>
                            </h4>
                            <div style="width: 100%; padding-top: 100%; position: relative; margin-bottom: 15px">
                                <img
                                    style="
                                        width: 100%;
                                        height: 100%;
                                        position: absolute;
                                        top: 0;
                                        left: 0;
                                        object-fit: cover;
                                    "
                                    id="imgsrc"
                                />
                            </div>
                            <input type="file" name="image" id="image" />
                        </div>
                        <div class="col-md-7 col-lg-8">
                            <h4 class="mb-3">Thông tin chi tiết</h4>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="name" class="form-label">Tên hoa</label>
                                    <div class="input-group has-validation">
                                        <input type="text" class="form-control" id="name" name="name" required />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label for="description">Giới thiệu</label>
                                    <div class="form-group input-group has-validation">
                                        <textarea
                                            class="form-control"
                                            id="description"
                                            name="description"
                                            rows="3"
                                            required
                                        ></textarea>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-4" />
                            <button class="w-100 btn btn-primary btn-lg" type="submit">Thêm</button>
                        </div>
                    </div>
                </form>
            </main>
        </div>
        <%- include('components/footer'); -%>
        <script>
            (function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.querySelectorAll('.needs-validation');
                // Loop over them and prevent submission
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener(
                        'submit',
                        function (event) {
                            if (!form.checkValidity()) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        },
                        false
                    );
                });
            })();
            $('#image').on('change', function () {
                if (this.files[0]) {
                    $('#imgsrc').prop('src', URL.createObjectURL(this.files[0]));
                } else {
                    $('#imgsrc').prop('src', '');
                }
            });
        </script>
    </body>
</html>
