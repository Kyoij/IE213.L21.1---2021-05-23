<div class="col">
    <div class="card shadow-sm">
        <div style="width: 100%; padding-top: 100%; position: relative">
            <% if (flower.image) {%>
            <svg
                class="bd-placeholder-img card-img-top"
                width="100%"
                height="100%"
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                aria-label="Placeholder: Thumbnail"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
                style="
                    background-image: url(/images/<%= flower.image %>);
                    background-size: cover;
                    position: absolute;
                    top: 0;
                    left: 0;
                "
            >
                <rect width="100%" height="100%" fill="#55595c" style="opacity: 0.2" />
                <text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= flower.name %></text>
            </svg>
            <%} else {%>
            <svg
                class="bd-placeholder-img card-img-top"
                width="100%"
                height="100%"
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                aria-label="Placeholder: Thumbnail"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
                style="position: absolute; top: 0; left: 0"
            >
                <rect width="100%" height="100%" fill="#55595c" />
                <text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
            </svg>
            <%}%>
        </div>
        <div class="card-body">
            <p class="card-text"><%= flower.description %></p>
            <div class="d-flex justify-content-between align-items-center">
                <!-- <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div> -->
                <a href="/flower/<%=flower._id%>" class="btn btn-sm btn-outline-secondary">View</a>
                <!-- <small class="text-muted">9 mins</small> -->
            </div>
        </div>
    </div>
</div>
